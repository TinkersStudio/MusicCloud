<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="5dp"
    android:elevation="2dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/bill_board_cover_art"
        android:src="@drawable/cover_art_stock"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bill_board_song_title"
            android:text="@string/dummy_title"
            android:padding="2.5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bill_board_singer"
            android:text="@string/dummy_singer"
            android:padding="2.5dp"
            android:layout_marginTop="3dp" />
    </LinearLayout>

    <!--FIXME: Fix the play button for more align-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_play"
        android:layout_marginLeft="150dp"
        android:clickable="true"
        android:layout_gravity="right"
        android:id="@+id/bill_board_play" />
</LinearLayout>